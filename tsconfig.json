{
  "compilerOptions": {
    "target": "es6",                                
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",                           
    "strict": true,                                 
    "esModuleInterop": true,                        
    "experimentalDecorators": true,                 
    "emitDecoratorMetadata": true,                  
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"     
  }
}
